{
  "name": "md-translation-gpt",
  "version": "0.0.1",
  "description": "A template for creating npm CLI tools using TypeScript and VSCode",
  "files": [
    "!lib/__tests__/**/*",
    "lib/**/*",
    "bin/**/*"
  ],
  "bin": {
    "md-translation-gpt": "./lib/main.js"
  },
  "scripts": {
    "dotenv": "shx cp .env.example .env",
    "build": "tsc && tsc-alias && node --loader ts-node/esm scripts/postbuild.ts",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "coverage": "codecov",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "dev": "node --loader ts-node/esm src/main.ts"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0"
  },
  "type": "module",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "chalk": "^5.0.1",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "execa": "^5.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "semantic-release": "^19.0.2",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@langchain/community": "^0.0.13",
    "@langchain/core": "^0.1.4",
    "@langchain/openai": "^0.0.9",
    "@microsoft/tiktokenizer": "^1.0.4",
    "commander": "^9.0.0",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "langchain": "^0.0.212",
    "mdast-util-to-string": "^4.0.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unist-util-visit": "^5.0.0",
    "vectordb": "^0.1.19"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
